; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Katrina Crocodile"    		;Name of character
displayname = "Katrina" 	;Name of character to display
versiondate = 02,23,2018    		;Version of character (MM-DD-YYYY or X.XX)
;startdate = 03, 13, 2017
mugenversion = 1.0          		;Version of M.U.G.E.N character works on (X.XX)
author = "Kazecat"         		;Character author name
pal.defaults = 1,2,3,4,5,6,7      		;Default palettes in order of preference (up to 4)
                            		;Numbering starts from 1
localcoord = 1280,720       	;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Katrina.cmd        ;Command set
cns     = Katrina.cns        ;Constants
st      = Katrina.cns        ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = Katrina.sff        ;Sprite
anim    = Katrina.air        ;Animation
sound   = Katrina.snd           ;Sound
ai      = kfm720.ai         ;AI hints data (not used)

pal2 = sarjiri.act
pal3 = berri.act
pal4 = mika.act
; Maps character selection buttons to palette numbers.

