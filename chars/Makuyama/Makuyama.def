; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Makuyama"        ;Name of character
displayname = "Makuyama" ;Name of character to display
versiondate = 09,30,2009    ;Version date of character (MM-DD-YYYY or X.XX)
;Startdate = 02,25,2018
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Kazecat"         ;Character author name
pal.defaults = 1,2,3,4,8      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 640,480        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Makuyama.cmd           ;Command set
cns     = Makuyama.cns           ;Constants
st      = Makuyama.cns           ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = Makuyama.sff           ;Sprite
anim    = Makuyama.air           ;Animation
sound   = Makuyama.snd           ;Sound
ai      = Makuyama.ai            ;AI hints data (not used)

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 4
b = 5
c = 6
x2 = 7 ;Hold Start and press button X for palette 7, etc.
y2 = 8
z2 = 9
a2 = 10
b2 = 10
c2 = 10

; Arcade mode
[Arcade]
intro.storyboard = 
ending.storyboard = 
