; Definition file for Aroma
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Aroma Skunk"        ;Name of character
displayname = "Aroma" ;Name of character to display
;Startdate = 06,12,2017
versiondate = 02,23,2018    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Kazecat"         ;Character author name
pal.defaults = 1,7,2,3,4,5,6      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 1280,720        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Aroma.cmd           ;Command set
cns     = Aroma.cns           ;Constants
st      = Aroma.cns           ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = Aroma.sff           ;Sprite
anim    = Aroma.air           ;Animation
sound   = Aroma.snd           ;Sound
ai      = Aroma.ai            ;AI hints data (not used)

pal1 = Aroma.act
pal2 = fifi.act
pal3 = sabrina.act

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 6
b = 4
c = 5
x2 = 7 ;Hold Start and press button X for palette 7, etc.
y2 = 8
z2 = 9
a2 = 7
b2 = 8
c2 = 9

; Arcade mode
[Arcade]
intro.storyboard = 
ending.storyboard = 
